{
  "dashboard": {
    "title": "System Overview",
    "tags": ["overview", "system"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Target Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [{"expr": "up", "refId": "A", "legendFormat": "{{job}}"}],
        "fieldConfig": {"defaults": {"unit": "short", "thresholds": {"mode": "absolute", "steps": [{"value": null, "color": "red"}, {"value": 1, "color": "green"}]}}}
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [{"expr": "process_resident_memory_bytes / 1024 / 1024", "refId": "A", "legendFormat": "Memory (MB)"}],
        "fieldConfig": {"defaults": {"unit": "MB", "decimals": 1}}
      },
      {
        "id": 3,
        "title": "Targets Up/Down",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [{"expr": "up", "refId": "A", "legendFormat": "{{job}} - {{instance}}"}],
        "yaxes": [{"format": "short", "min": 0, "max": 1}, {"format": "short"}]
      },
      {
        "id": 4,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [{"expr": "rate(prometheus_http_requests_total[5m])", "refId": "A", "legendFormat": "{{handler}} - {{code}}"}],
        "yaxes": [{"format": "reqps"}, {"format": "short"}]
      }
    ],
    "time": {"from": "now-6h", "to": "now"}
  }
}
